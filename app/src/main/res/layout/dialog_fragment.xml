<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameDialogText"
        android:layout_width="234dp"
        android:layout_height="22dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="89dp"
        android:text="@string/ingrese_el_nombre_de_la_actividad"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameDialogText2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:hint="nombre de la actividad"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/createDialogButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameDialogText" />

    <Button
        android:id="@+id/createDialogButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:text="Crear"
        android:textColor="#311B92"
        app:layout_constraintEnd_toEndOf="@+id/nameDialogText2"
        app:layout_constraintStart_toStartOf="@+id/nameDialogText2"
        app:layout_constraintTop_toBottomOf="@+id/nameDialogText2" />

    <TextView
        android:id="@+id/activitySelectedText"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="59dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/nameDialogText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>